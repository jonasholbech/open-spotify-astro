---
const { variant = "", bordered = false } = Astro.props;
const hasBorder = bordered ? "bordered" : "";
---

<button class={variant + " " + hasBorder}><slot /></button>

<style>
  button.dark {
    margin-right: 1rem;
    background: transparent;
    color: #fff;
  }
  .bordered {
    border: 1px solid #fff;
  }
  button {
    border-radius: 500px;
    padding: 0.7rem 2rem;
    border: none;
    background-color: #fff;
    color: var(--color-grey-0);
    font-weight: bold;
  }
</style>
