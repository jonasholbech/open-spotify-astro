---
import Playlist from "./Playlist.astro";
const { title } = Astro.props;
---

<article>
  <header>
    <h2>{title}</h2>
    <a href="#/seeall">Show all</a>
  </header>
  <section class="playlists">
    <Playlist color="yellow" cover="0001.jpg" title="Peacefull Piano">
      Relax and indulge with beautiful piano pieces
    </Playlist>
    <Playlist color="hotpink" cover="0002.jpg" title="Peacefull Piano">
      Relax and indulge with beautiful piano pieces
    </Playlist>
    <Playlist color="#fff" cover="0003.jpg" title="Peacefull Piano">
      Relax and indulge with beautiful piano pieces
    </Playlist>
    <Playlist color="royalblue" cover="0004.jpg" title="Peacefull Piano">
      Relax and indulge with beautiful piano pieces
    </Playlist>
    <Playlist color="hsl(50 80% 100%)" cover="0005.jpg" title="Peacefull Piano">
      Relax and indulge with beautiful piano pieces
    </Playlist>
    <Playlist color="hotpink" cover="0006.jpg" title="Peacefull Piano">
      Relax and indulge with beautiful piano pieces
    </Playlist>
  </section>
</article>

<style>
  article {
    margin-bottom: 2rem;
    overflow: hidden;
  }
  h2 {
    margin: 0;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 1rem;
  }
  .playlists {
    display: flex;
    max-width: calc(100vw - 270px);
    overflow-x: hidden;
    gap: 1rem;
  }
</style>
